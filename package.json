{
  "name": "lightning",
  "displayName": "Lightning",
  "description": "VS Code extension with sidebar view and Hello dialog",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "lightning": [
        {
          "id": "lightningView",
          "name": "Lightning",
          "when": "true",
          "icon": "$(zap)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lightning",
          "title": "Lightning",
          "icon": "$(zap)"
        }
      ]
    },
    "commands": [
      {
        "command": "lightning.openJsonFile",
        "title": "Open JSON File"
      },
      {
        "command": "lightning.openFile",
        "title": "Open File"
      },
      {
        "command": "lightning.showDialog",
        "title": "Show Dialog"
      },
      {
        "command": "lightning.closeFile",
        "title": "Close File",
        "icon": "$(close)"
      },
      {
        "command": "lightning.applyDiff",
        "title": "Apply Diff",
        "icon": "$(git-pull-request)"
      },
      {
        "command": "lightning.revertDiff",
        "title": "Revert Diff",
        "icon": "$(close)"
      },
      {
        "command": "lightning.resetConfig",
        "title": "Reset Config",
        "icon": "$(refresh)"
      },
      {
        "command": "lightning.showQuiz",
        "title": "Show Quiz"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "lightning.resetConfig",
          "when": "view == lightningView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "lightning.closeFile",
          "when": "view == lightningView && viewItem == fileItem",
          "group": "inline"
        },
        {
          "command": "lightning.applyDiff",
          "when": "view == lightningView && viewItem == lightning-diff",
          "group": "inline"
        },
        {
          "command": "lightning.revertDiff",
          "when": "view == lightningView && viewItem == lightning-diff",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
